<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/user_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:background="@color/white"
                app:shapeAppearanceOverlay="@style/circleImageStyle"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/up"
                    tools:text="罗翔说刑法"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/info"
                    tools:text="2103.9万粉丝  227视频"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="11sp"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="@string/attention"
                    android:layout_gravity="center|end"
                    android:layout_width="80dp"
                    android:layout_height="40dp" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/textColorTitle"
            tools:text="【罗翔】让学生呕吐，校长落泪的”营养午餐“犯了什么罪？"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/video_info"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            tools:text="231.3万      1.1万    1-5     BV1N3411e7bJ                    未经作者授权禁止转载"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/simple_introduce"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            tools:text="2021年11月23日，有媒体报道河南省新乡封丘县赵岗镇戚城中学30多名学生吃过学校的营养午餐后，出现呕吐、拉肚子现象，据学生们反映，当天吃的饭菜里“豆腐有点馊，烩菜有点腥”。
那么食品不干净不卫生，构不构成犯罪？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_thumbs_up"
                    android:src="@drawable/ic_thumps_up"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription"
                    app:tint="@color/textColorPrimary" />
                <TextView
                    android:id="@+id/tv_thumbs_up"
                    tools:text="2.5万"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_dislike"
                    android:src="@drawable/ic_dislike"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription"
                    app:tint="@color/textColorPrimary" />
                <TextView
                    android:text="@string/dislike"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_coin"
                    android:src="@drawable/ic_coin"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription"
                    app:tint="@color/textColorPrimary" />
                <TextView
                    android:id="@+id/tv_coin"
                    tools:text="1230"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_collect"
                    android:src="@drawable/ic_collect"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription"
                    app:tint="@color/textColorPrimary" />
                <TextView
                    android:id="@+id/tv_collect"
                    tools:text="2990"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_share"
                    android:src="@drawable/ic_share"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="ContentDescription"
                    app:tint="@color/textColorPrimary" />
                <TextView
                    android:id="@+id/tv_share"
                    tools:text="683"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal" />
            </FrameLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rv_videos_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

</LinearLayout>
